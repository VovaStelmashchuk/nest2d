{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./*"],
      "@@/*": ["./*"],
      "@/*": ["./*"],
      "~~/server/*": ["./server/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".nuxt/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".output"
  ]
}

